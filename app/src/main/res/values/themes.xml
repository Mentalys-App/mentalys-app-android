<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MentalysApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
<!--         <item name="colorPrimary">@color/primary</item>-->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@color/white</item>

    </style>

    <!-- For ShapeableImageView -->
    <style name="ShapeAppearanceOverlayCornerRadius8dp">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>
    <style name="ShapeAppearanceOverlayCornerRadius16dp">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>
    <style name="ShapeAppearanceOverlayCornerRadius25dp">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">25dp</item>
    </style>
    <style name="ShapeAppearanceOverlayCornerRadius50dp">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50dp</item>
    </style>
    <style name="ShapeAppearanceOverlayCornerRadiusTop32dp">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">32dp</item>
        <item name="cornerSizeTopRight">32dp</item>
    </style>

    <!-- Hint EditText Style -->
    <style name="HintStyle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
        <item name="android:textColorHint">@color/bg_card</item>
        <item name="fontFamily">@font/roboto_regular</item>
    </style>

    <style name="Theme.MentalysApp" parent="Base.Theme.MentalysApp" />

    <!-- Splash Screen -->
    <style name="Theme.App.SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="postSplashScreenTheme">@style/Base.Theme.MentalysApp</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_logo</item>
    </style>

</resources>