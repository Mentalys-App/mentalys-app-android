<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MentalysApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:statusBarColor">@color/white</item>
    </style>

    <!-- For ShapeableImageView -->
    <style name="ShapeAppearanceOverlayCornerRadius16dp">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <!-- Hint EditText Style -->
    <style name="HintStyle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
        <item name="android:textColorHint">@color/bg_card</item>
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="color">@color/tertiary</item>
    </style>


    <!-- Splash Screen -->
    <style name="Theme.App.SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="postSplashScreenTheme">@style/Base.Theme.MentalysApp</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_logo</item>
    </style>

</resources>